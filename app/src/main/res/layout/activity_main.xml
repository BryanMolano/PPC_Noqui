<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_general">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="424dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="192dp"
        android:alpha="0.3"
        android:rotation="-40"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ovalo_diseno_fondo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:text="QR"
        app:layout_constraintEnd_toEndOf="@+id/imageButton10"
        app:layout_constraintStart_toStartOf="@+id/imageButton10"
        app:layout_constraintTop_toBottomOf="@+id/imageButton10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarjeta"
        app:layout_constraintEnd_toEndOf="@+id/imageButton11"
        app:layout_constraintStart_toStartOf="@+id/imageButton11"
        app:layout_constraintTop_toBottomOf="@+id/imageButton11" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMetas"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2C2C2C"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="8dp"
        android:text="Enviar"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:icon="@drawable/enviar"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="16dp"
        app:iconTint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTransfiya" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnColchon"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2C2C2C"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="8dp"
        android:text="Perfil"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:icon="@drawable/usuario_logo_mainactivity"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/btnCajaFuerte"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Hola, usuario"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:background="@drawable/fondo_gris_icono"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usuario_logo_mainactivity"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="2dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton6"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notificacion_logo_mainactivity" />


    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="2dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question_solid_full" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/codigo_logo" />

    <TextView
        android:id="@+id/textview_dinero_disponible"
        android:layout_width="164dp"
        android:layout_height="35dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="124dp"
        android:text="*****"
        android:textAlignment="center"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="3dp"
        android:fontFamily=""
        android:text="Depósito Bajo Monto"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/button_ojo_dinero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="35dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="188dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="188dp"
        android:text="Total:"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_dinero_disponible" />

    <TextView
        android:id="@+id/textview_dinero_total"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="184dp"
        android:layout_marginEnd="184dp"
        android:text="*****"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageButton
        android:id="@+id/button_ojo_dinero"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"

        android:layout_marginTop="36dp"
        android:layout_marginEnd="112dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/eye_solid_full" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="117dp"
        android:text="Más Usados"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="48dp"
        android:text="Servicios"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMetas" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTransfiya"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2C2C2C"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="8dp"
        android:text="Tarjeta"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:icon="@drawable/tarjeta"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCajaFuerte"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2C2C2C"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="8dp"
        android:text="Caja Fuerte"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:icon="@drawable/cajafuerte"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/btnTransfiya"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="61dp"
        android:layout_height="63dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="26dp"
        android:adjustViewBounds="true"
        android:background="@drawable/fondo_grisoscuro_icono"
        android:scaleType="centerInside"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/factura" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="61dp"
        android:layout_height="63dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/fondo_grisoscuro_icono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton11"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/qr" />

    <ImageButton
        android:id="@+id/btnCajaFuerte2"
        android:layout_width="61dp"
        android:layout_height="63dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/fondo_grisoscuro_icono"
        android:scaleType="centerInside"

        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/cajafuertev2" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="61dp"
        android:layout_height="63dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/fondo_grisoscuro_icono"
        app:layout_constraintStart_toEndOf="@+id/btnCajaFuerte2"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/tarjetav2" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="61dp"
        android:layout_height="17dp"
        android:layout_marginTop="1dp"
        android:text="Facturas"
        app:layout_constraintEnd_toEndOf="@+id/imageButton5"
        app:layout_constraintStart_toStartOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Caja Fuerte"
        app:layout_constraintEnd_toEndOf="@+id/btnCajaFuerte2"
        app:layout_constraintStart_toStartOf="@+id/btnCajaFuerte2"
        app:layout_constraintTop_toBottomOf="@+id/btnCajaFuerte2" />

    <include
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
    <include
        android:id="@+id/azul"
        layout="@layout/activity_boton_azul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>