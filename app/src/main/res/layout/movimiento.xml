<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  android:background="@drawable/mv_barra_movimiento" android:paddingStart="16dp"
    android:paddingEnd="28dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/LogoEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mv_enviado_icono" />

    <TextView
        android:id="@+id/txtMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Movimiento"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/LogoEnviado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtPD"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/txtPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Para"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/LogoEnviado"
        app:layout_constraintTop_toBottomOf="@+id/txtMovimiento"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="00000"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>