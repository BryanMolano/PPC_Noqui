<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161622"
    tools:context=".Pedir_dinero">

    <ImageButton
        android:id="@+id/btnSigue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        app:srcCompat="@drawable/view_enviar_sigue" />

    <ImageButton
        android:id="@+id/btnVolver_pide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="353dp"
        android:layout_marginBottom="17dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/tvpide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lg_boton_volver" />

    <!-- Botón de despliegue con la flecha -->


    <!-- Contenedor del saldo, oculto al inicio -->
    <ImageButton
        android:id="@+id/btnToggleSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="114dp"
        android:background="@android:color/transparent"
        android:contentDescription="Mostrar/Ocultar Saldo"
        app:layout_constraintBottom_toTopOf="@+id/edit_numeropide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVolver_pide"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_down" />

    <LinearLayout
        android:id="@+id/layoutSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnToggleSaldo"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible: $1.000,00"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_light"/>

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $1.000,00"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_light"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="334dp"
        android:layout_height="424dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="192dp"
        android:layout_marginBottom="115dp"
        android:alpha="0.3"
        android:rotation="-40"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ovalo_diseno_fondo" />

    <TextView
        android:id="@+id/tvpide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Pide Plata"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_numeropide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolver_pide" />

    <EditText
        android:id="@+id/edit_numeropide"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:gravity="center_vertical|start"
        android:hint="¿A quién le vas a pedir?"
        android:inputType="phone"
        android:lines="1"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColorHint="#6C6969"
        android:translationZ="2dp"
        android:drawableEnd="@drawable/ic_user"
        android:drawablePadding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvpide" />

    <EditText
        android:id="@+id/editPlatapide"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="173dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:gravity="top|start"
        android:hint="¿Cuánto?"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="5"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColorHint="#6C6969"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_numeropide" />

    <EditText
        android:id="@+id/editMsgpide"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="270dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:gravity="top|start"
        android:hint="Mensaje"
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="89dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColorHint="#6C6969"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPlatapide" />


</androidx.constraintlayout.widget.ConstraintLayout>