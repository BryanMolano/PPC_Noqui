<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161622"
    tools:context=".Tu_Informacion">

    <!-- Botón volver -->

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="334dp"
        android:layout_height="424dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="192dp"
        android:layout_marginBottom="27dp"
        android:alpha="0.3"
        android:elevation="0dp"
        android:rotation="-40"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnActualizarDatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ovalo_diseno_fondo" />

    <!-- Título -->
    <ImageButton
        android:id="@+id/btnVolver_tuinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lg_boton_volver" />

    <!-- Marco del perfil -->

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tu Información"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVolver_tuinfo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView29"
        app:srcCompat="@drawable/marco" />

    <!-- Imagen de perfil -->

    <!-- Botón cambiar foto -->
    <!-- Botón cambiar foto -->

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_perfil"
        app:layout_constraintBottom_toBottomOf="@id/imageView16"
        app:layout_constraintEnd_toEndOf="@id/imageView16"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@id/imageView16"
        app:layout_constraintTop_toTopOf="@id/imageView16"
        app:layout_constraintVertical_bias="0.588" />

    <ImageButton
        android:id="@+id/btncambiarfoto"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="58dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_cambiofoto"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imgPerfil"/>

    <!-- Subtítulo Nombre -->
    <TextView
        android:id="@+id/tvSubNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/imageView16"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Campo Nombre -->
    <RelativeLayout
        android:id="@+id/layoutNombre"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/card_box"
        app:layout_constraintTop_toBottomOf="@id/tvSubNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etNombreperfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/btnEditNombre"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_light"
            android:hint="Cristian David Fabra"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

        <ImageButton
            android:id="@+id/btnEditNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"/>
    </RelativeLayout>

    <!-- Subtítulo Teléfono -->
    <TextView
        android:id="@+id/tvSubTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Número Celular"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/layoutNombre"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Campo Teléfono -->
    <RelativeLayout
        android:id="@+id/layoutTelefono"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/card_box"
        app:layout_constraintTop_toBottomOf="@id/tvSubTelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/btnEditTelefono"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_light"
            android:hint="311 233 1245"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

        <ImageButton
            android:id="@+id/btnEditTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"/>
    </RelativeLayout>

    <!-- Subtítulo Correo -->
    <TextView
        android:id="@+id/tvSubCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Correo Electrónico"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/layoutTelefono"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Campo Correo -->
    <RelativeLayout
        android:id="@+id/layoutCorreo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/card_box"
        app:layout_constraintTop_toBottomOf="@id/tvSubCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/btnEditCorreo"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_light"
            android:hint="CristianFabra@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />

        <ImageButton
            android:id="@+id/btnEditCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>

    <!-- Botón Actualizar -->
    <Button
        android:id="@+id/btnActualizarDatos"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#1976FF"
        android:fontFamily="@font/poppins_medium"
        android:text="Actualizar Datos"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
