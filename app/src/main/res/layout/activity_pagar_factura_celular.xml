<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161622"

    tools:context=".Pagar_factura_celular">

    <TextView
        android:id="@+id/txtview_factura_celular"
        android:layout_width="377dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Pagar Factura de celular"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="424dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="192dp"
        android:alpha="0.3"
        android:rotation="-40"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ovalo_diseno_fondo" />


    <EditText
        android:id="@+id/edit_numero"
        android:layout_width="312dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:gravity="top|start"
        android:hint="Número de celular"
        android:inputType="phone"
        android:lines="1"
        android:maxLines="5"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColorHint="#6C6969"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview_factura_celular" />

    <EditText
        android:id="@+id/edit_dinero"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:gravity="top|start"
        android:hint="¿Cuánto?"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLines="5"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColorHint="#6C6969"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_numero" />

    <ImageButton
        android:id="@+id/btn_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/view_enviar_sigue" />

    <ImageButton
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lg_boton_volver" />

    <ImageView
        android:id="@+id/logo_servicio"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_dinero"
        app:srcCompat="@drawable/servicios_boton_movistar"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>