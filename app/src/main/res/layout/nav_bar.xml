<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="12dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/fondo_gris_navbar"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnInicio"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/nv_boton_inicio" />

        <ImageButton
            android:id="@+id/btnMovimientos"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/nv_boton_movimientos" />

        <ImageButton
            android:id="@+id/btnServicios"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/nv_boton_servicios" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="700dp"
        android:layout_marginEnd="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/fondo_azul_boton_navbar"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/outline_attach_money_24" />

</androidx.constraintlayout.widget.ConstraintLayout>